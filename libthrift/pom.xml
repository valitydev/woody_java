    </dependencies>
    <profiles>
        <profile>
            <id>generatejava</id>
            <build>
                <finalName>${project.artifactId}</finalName>
                <plugins>
                    <plugin>
                        <groupId>org.apache.thrift</groupId>
                        <artifactId>thrift-maven-plugin</artifactId>
                        <version>0.10.0</version>
                        <configuration>
                            <generator>java:generated_annotations=suppress</generator>
                            <thriftExecutable>thrift</thriftExecutable>
                            <includes>
                                **/ThriftTest.thrift,
                                **/JavaTypes.thrift,
                                **/DebugProtoTest.thrift,
                                **/DoubleConstantsTest.thrift,
                                **/OptionalRequiredTest.thrift,
                                **/ManyOptionals.thrift,
                                **/JavaDeepCopyTest.thrift,
                                **/EnumContainersTest.thrift,
                                **/JavaBinaryDefault.thrift,
                                **/VoidMethExceptionsTest.thrift,
                                **/JavaAnnotationTest.thrift,
                                **/thrift_test_schema.thrift
                            </includes>
                        </configuration>
                        <executions>
                            <execution>
                                <id>thrift-test-sources</id>
                                <phase>generate-test-sources</phase>
                                <goals>
                                    <goal>testCompile</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
